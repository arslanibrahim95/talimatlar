# Staging Environment Configuration
NODE_ENV=staging
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=claude_staging
POSTGRES_USER=claude
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_URL=postgresql://claude:${POSTGRES_PASSWORD}@postgres:5432/claude_staging

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=8h

# API Configuration
API_RATE_LIMIT=50
API_RATE_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_FROM=staging@claude-talimat.com

# AI Service Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Security Configuration
CORS_ORIGIN=https://staging.claude-talimat.com
ALLOWED_HOSTS=staging.claude-talimat.com,staging-api.claude-talimat.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true

# Staging Specific
HOT_RELOAD=false
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
PERFORMANCE_MONITORING=true
