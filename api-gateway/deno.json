{
  "imports": {
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "dotenv": "https://deno.land/x/dotenv@v3.2.2/mod.ts",
    "djwt": "https://deno.land/x/djwt@v2.8/mod.ts"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
