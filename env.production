# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=warn

# Database Configuration
POSTGRES_DB=claude_prod
POSTGRES_USER=claude
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_URL=postgresql://claude:${POSTGRES_PASSWORD}@postgres:5432/claude_prod

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=4h

# API Configuration
API_RATE_LIMIT=20
API_RATE_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=/app/uploads

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_FROM=noreply@claude-talimat.com

# AI Service Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Security Configuration
CORS_ORIGIN=https://claude-talimat.com
ALLOWED_HOSTS=claude-talimat.com,api.claude-talimat.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true

# Production Specific
HOT_RELOAD=false
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
PERFORMANCE_MONITORING=true
SECURITY_HEADERS=true
RATE_LIMITING=true
