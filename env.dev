# Development Environment Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
POSTGRES_DB=claude_dev
POSTGRES_USER=claude
POSTGRES_PASSWORD=claude123
DATABASE_URL=postgresql://claude:claude123@postgres:5432/claude_dev

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev@claude-talimat.com
SMTP_PASS=dev-password
SMTP_FROM=dev@claude-talimat.com

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_PASSWORD=admin123

# Security Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true

# Development Specific
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=true
