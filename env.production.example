# Production Environment Configuration
NODE_ENV=production

# Application
APP_NAME=Claude Talimat İş Güvenliği Sistemi
APP_VERSION=1.0.0
APP_URL=https://claude-talimat.com
API_BASE_URL=https://api.claude-talimat.com

# Database
POSTGRES_DB=claude_talimat_prod
POSTGRES_USER=claude_talimat_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://claude_talimat_user:your_secure_postgres_password_here@postgres:5432/claude_talimat_prod

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@claude-talimat.com

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# Security
CORS_ORIGIN=https://claude-talimat.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# GitHub
GITHUB_TOKEN=your_github_token_here

# Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=claude-talimat-backups
BACKUP_S3_REGION=eu-west-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKUP=true
ENABLE_MONITORING=true
ENABLE_LOGGING=true

# Development/Testing
ENABLE_DEBUG=false
ENABLE_TEST_MODE=false
ENABLE_MOCK_DATA=false
