# =============================================================================
# CLAUDE TALİMAT İŞ GÜVENLİĞİ YÖNETİM SİSTEMİ - PRODUCTION ENVIRONMENT
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://safety_admin:${POSTGRES_PASSWORD}@postgres:5432/safety_production
POSTGRES_DB=safety_production
POSTGRES_USER=safety_admin
POSTGRES_PASSWORD=your-super-secure-production-password-here
REDIS_PASSWORD=your-super-secure-redis-password-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-key-here-change-this-in-production-immediately
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
OTP_EXPIRATION=5m

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_KEY=your-super-secure-meilisearch-key-here

# =============================================================================
# MINIO OBJECT STORAGE
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-super-secure-minio-access-key
MINIO_SECRET_KEY=your-super-secure-minio-secret-key
MINIO_BUCKET_NAME=claude-documents
MINIO_USE_SSL=false

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=true

# =============================================================================
# SMS CONFIGURATION (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# APPLICATION PORTS
# =============================================================================
AUTH_SERVICE_PORT=8001
DOCUMENT_SERVICE_PORT=8002
ANALYTICS_SERVICE_PORT=8003
NOTIFICATION_SERVICE_PORT=8004
FRONTEND_PORT=3000

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your-super-secure-grafana-password
SENTRY_DSN=your-production-sentry-dsn

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
NODE_ENV=production
DEBUG=false
HOT_RELOAD=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# SSL/TLS CONFIGURATION (if using HTTPS)
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
GZIP_COMPRESSION=true
CLIENT_MAX_BODY_SIZE=50M

# =============================================================================
# ALERTING & NOTIFICATIONS
# =============================================================================
ALERT_EMAIL=alerts@yourdomain.com
ALERT_WEBHOOK_URL=https://yourdomain.com/webhooks/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
