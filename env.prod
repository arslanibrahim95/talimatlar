# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://claude_talimat:${POSTGRES_PASSWORD}@postgres:5432/claude_talimat
POSTGRES_DB=claude_talimat
POSTGRES_USER=claude_talimat
POSTGRES_PASSWORD=ClaudeTalimat2024!SecureDB
REDIS_PASSWORD=ClaudeTalimat2024!SecureRedis

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=ClaudeTalimat2024!JWTSecretKeyForProductionUse
JWT_ALGORITHM=HS256
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
OTP_EXPIRATION=5m

# =============================================================================
# MEILISEARCH CONFIGURATION
# =============================================================================
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_KEY=ClaudeTalimat2024!MeiliSearchKey

# =============================================================================
# MINIO OBJECT STORAGE
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=claude_talimat_access
MINIO_SECRET_KEY=ClaudeTalimat2024!MinioSecretKey
MINIO_BUCKET_NAME=claude-documents
MINIO_USE_SSL=false

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=claude.talimat@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@claude-talimat.com
SMTP_TLS=true

# =============================================================================
# SMS CONFIGURATION (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# APPLICATION PORTS
# =============================================================================
AUTH_SERVICE_PORT=8004
DOCUMENT_SERVICE_PORT=8002
ANALYTICS_SERVICE_PORT=8003
NOTIFICATION_SERVICE_PORT=8005
FRONTEND_PORT=80

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
CORS_ORIGINS=https://claude-talimat.com,https://www.claude-talimat.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=ClaudeTalimat2024!Grafana
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
NODE_ENV=production
DEBUG=false
HOT_RELOAD=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
GZIP_COMPRESSION=true
CLIENT_MAX_BODY_SIZE=50M

# =============================================================================
# ALERTING & NOTIFICATIONS
# =============================================================================
ALERT_EMAIL=alerts@claude-talimat.com
ALERT_WEBHOOK_URL=https://claude-talimat.com/webhooks/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistem bakımda. Lütfen daha sonra tekrar deneyin.

# =============================================================================
# APPLICATION VERSION
# =============================================================================
APP_VERSION=1.0.0
GIT_COMMIT=production-deploy